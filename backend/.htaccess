# =====================================================
# .htaccess para API REST de restaurant
# Colocar en la raíz del directorio de la API
# =====================================================

# Habilitar RewriteEngine
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Establecer la base del directorio
    # Si la API está en /backend/, descomenta y ajusta la siguiente línea:
    RewriteBase /restaurant/backend/
    
    # Si la API está en la raíz del dominio, usa:
    # RewriteBase /
    
    # No reescribir archivos y directorios que existen
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    
    # Redirigir todo al index.php
    RewriteRule ^(.*)$ index.php [QSA,L]
</IfModule>

# Configuración de seguridad
<IfModule mod_headers.c>
    # Prevenir clickjacking
    Header always set X-Frame-Options "SAMEORIGIN"
    
    # Prevenir MIME type sniffing
    Header always set X-Content-Type-Options "nosniff"
    
    # Habilitar XSS protection
    Header always set X-XSS-Protection "1; mode=block"
    
    # Deshabilitar información del servidor
    Header unset Server
    Header unset X-Powered-By
</IfModule>

# Deshabilitar listado de directorios
Options -Indexes

# Proteger archivos sensibles
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Bloquear acceso a archivos de configuración
<FilesMatch "\.(env|ini|log|sh|sql)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Configuración de PHP (si es necesario)
<IfModule mod_php7.c>
    php_flag display_errors Off
    php_flag log_errors On
    php_value error_log /var/log/php_errors.log
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
</IfModule>

# Comprimir archivos para mejor rendimiento
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/json
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE application/javascript
</IfModule>

# Cache para mejorar rendimiento (opcional)
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
    ExpiresByType application/json "access plus 0 seconds"
</IfModule>